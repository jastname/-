
<html>
    <head>
        <title>쇼핑몰 회원관리 프로그램</title>
        <script>
            function aaa(){
                alert("자바스크립트!")
                if(document.frm.txt1.value.length ==0){
                    alert("회원번호가 입력되지 않았습니다.!")
                }
                if(document.frm.txt2.value.length ==0){
                    alert("회원성명가 입력되지 않았습니다.!")
                }
                if(document.frm.txt3.value.length ==0){
                    alert("회원전화가 입력되지 않았습니다.!")
                }
                if(document.frm.txt4.value.length ==0){
                    alert("회원주소가 입력되지 않았습니다.!")
                }
                if(document.frm.dt.value.length ==0){
                    alert("가입일자가 입력되지 않았습니다.!")
                
                }
                if(document.frm.txt5.value.length ==0){
                    alert("고객등급이 입력되지 않았습니다.!")
                }
                if(document.frm.txt6.value.length ==0){
                    alert("도시코드가 입력되지 않았습니다.!")
                }

            }
        </script>
    </head>
    <body>
        <h2>
            홈쇼핑 회원 등록
        </h2>
        <form name="frm">
            <table border="1">
            <tr><td>회원번호</td>
                <td><input type="text" name="txt1"></td></tr>
            <tr><td>회원성명</td>
                <td><input type="text" name="txt2"></td></tr>
            <tr><td>회원전화</td>
                <td><input type="text" name="txt3"></td></tr>
            <tr><td>회원주소</td>
                <td><input type="text" name="txt4"></td></tr>
            <tr><td>가입일자</td>
                <td><input type="date" name="dt"></td></tr>
            <tr><td>고객등급<br>[A:VIP,B:일반,C:직원]</td>
                <td><input type="text" name="txt5"></td></tr>
            <tr><td>도시코드</td>
                <td><input type="text" name="txt6"></td></tr>
            <tr><td colspan="2">
                <input type="submit" value="등록" onclick="return aaa()">
                <input type="button" value="조회"></td></tr>

        </form>
    </body>
</html>
